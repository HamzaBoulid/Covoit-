<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/page_chercher"
    android:orientation="vertical"
    tools:context=".EspaceUtilisateur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150px"
                    android:fontFamily="@font/batangas"
                    android:text="BIENVENUE !"
                    android:textColor="@color/darkgreen"
                    android:textSize="40dp"
                    android:shadowColor="#BBC2AF"
                    android:shadowRadius="1"
                    android:shadowDx="2"
                    android:shadowDy="3"
                    android:letterSpacing="0.03"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/batangas"
                    android:text="Vous cherchez un trajet ?"
                    android:textColor="@color/darkgreen"
                    android:textSize="30dp"
                    android:shadowColor="#BBC2AF"
                    android:shadowRadius="1"
                    android:shadowDx="2"
                    android:shadowDy="3"
                    android:letterSpacing="0.03"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Depart"
                    style="@style/EditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:hint="Départ"
                        android:inputType="text"
                        android:textColor="@color/darkgreen"></com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Arrivee"
                    style="@style/EditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:hint="Arrivée"
                        android:inputType="text"
                        android:textColor="@color/darkgreen"
                        app:errorEnabled="true"></com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Date"
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/alata"
                            android:hint="Aujourd'hui"
                            android:inputType="date"
                            android:textColor="@color/darkgreen"
                            app:errorEnabled="true"></com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="8dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/NbPersonne"
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/alata"
                            android:hint="1 Passager"
                            android:inputType="number"
                            android:textColor="@color/darkgreen"
                            app:errorEnabled="true"></com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/rechercherTrajet"
                style="@style/Widget.App.ShapeableButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/palanquin_dark_bold"
                android:letterSpacing="0.05"
                android:text="RECHERCHER"
                android:backgroundTint="@color/ButtonBG"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:textSize="22sp"></Button>

            <!-- 4 bouttons à supprimer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/deconnection"
                    style="@style/Widget.App.ShapeableButton"
                    android:layout_width="210dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="100px"
                    android:fontFamily="@font/baloo"
                    android:text="SE DECONNECTER"
                    android:textColor="@color/brightgreen"
                    android:textSize="17sp"></Button>

                <Button
                    android:id="@+id/ajouter_trajet"
                    style="@style/Widget.App.ShapeableButton"
                    android:layout_width="210dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo"
                    android:text="AJOUTER UN TRAJET"
                    android:textColor="@color/brightgreen"
                    android:textSize="17sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mes_trajets"
                    style="@style/Widget.App.ShapeableButton"
                    android:layout_width="210dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="100px"
                    android:fontFamily="@font/baloo"
                    android:text="MES TRAJETS"
                    android:textColor="@color/brightgreen"
                    android:textSize="17sp"></Button>

                <Button
                    android:id="@+id/infos_utilisateur"
                    style="@style/Widget.App.ShapeableButton"
                    android:layout_width="210dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo"
                    android:text="MON PROFIL"
                    android:textColor="@color/brightgreen"
                    android:textSize="17sp"></Button>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

